{
  "name": "agent-factory-mcp",
  "version": "1.0.0",
  "description": "Universal MCP server for CLI tool auto-discovery and AI agent management",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "agent-factory-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "bun run dist/index.js",
    "dev": "tsc && bun run dist/index.js",
    "test": "bun test test/**/*.test.js",
    "type-check": "tsc --noEmit",
    "lint": "bun biome lint src",
    "lint:fix": "bun biome lint src --write",
    "format": "bun biome format src --write",
    "format:check": "bun biome format src"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "cli",
    "ai",
    "llm",
    "agent",
    "auto-discovery",
    "tool-registration"
  ],
  "author": "utenadev",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "chalk": "^5.0.0",
    "inquirer": "^9.0.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}