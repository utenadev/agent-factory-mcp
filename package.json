{
  "name": "agent-factory-mcp",
  "version": "1.0.0",
  "description": "Universal MCP server for CLI tool auto-discovery and AI agent management",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "agent-factory-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run --exclude test/e2e-ai-flow.test.ts",
    "test:e2e": "vitest run test/e2e-ai-flow.test.ts",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "biome lint src",
    "lint:fix": "biome lint src --write",
    "format": "biome format src --write",
    "format:check": "biome format src"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "cli",
    "ai",
    "llm",
    "agent",
    "auto-discovery",
    "tool-registration"
  ],
  "author": "utenadev",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": ["dist/", "README.md", "LICENSE"],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "chalk": "^5.0.0",
    "inquirer": "^9.0.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "typescript": "^5.0.0",
    "vitest": "^2.1.8"
  },
  "publishConfig": {
    "access": "public"
  }
}
