{
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "default": "1.0"
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string"
          },
          "enabled": {
            "type": "boolean",
            "default": true
          },
          "providerType": {
            "type": "string",
            "enum": [
              "cli-auto",
              "custom"
            ],
            "default": "cli-auto"
          },
          "parserStrategy": {
            "type": "string",
            "enum": [
              "gnu",
              "go",
              "custom"
            ]
          },
          "subcommands": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "defaultArgs": {
            "type": "object",
            "additionalProperties": {
              "type": [
                "string",
                "number",
                "boolean"
              ]
            }
          },
          "alias": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "systemPrompt": {
            "type": "string",
            "description": "System prompt for AI agent persona configuration"
          },
          "env": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          }
        },
        "required": [
          "command"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "tools"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}